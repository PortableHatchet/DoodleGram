
@model UserModel

@{
  ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="cshtml">
<head>
  <title>My Profile</title>
</head>
<body>
  <header>
    <h1>My Doodle Profile</h1>
  </header>
  <div class = "container">
    <!-- User information -->
    <h2>Username</h2>
    <p>Email: user@example.com</p>
  </div>
  <div class = "createDoodle">
    <style>
            canvas {
                border: 1px solid #000;
            }
        </style>
    <body>
      <canvas id = "paintCanvas" width = "800" height = "600"></canvas>
      <br/>
      <button id = "clearButton">Clear</button>

      <script src = "js/site.js"></script>
    </body>
  </div>
  <!-- Doodle section -->
  <h2>My Doodles</h2>
  <div class = "doodle">
    <img src = "" alt = "Doodle 1">
    <p>Description: A beautiful doodle</p>
  </div>
  <div class = "doodle">
    <img src = "" alt = "Doodle 2">
    <p>Description: Another amazing doodle</p>
  </div>
</body>

</html>



